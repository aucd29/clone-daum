<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <!-- splash -->

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--
    brs
    https://stackoverflow.com/questions/31941753/how-to-make-a-circular-ripple-on-a-button-when-its-being-clicked
    -->
    <style name="brs_bottom_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">13dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="brs_stack">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>


    <!--
    tab
    https://stackoverflow.com/questions/30909471/tablayout-android-design-library-text-color
    -->

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="realtime_issue_tab_layout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/realtime_tab_text</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <!--
         indicator width 조정
         https://code.i-harness.com/en/q/269afa3
         -->
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="realtime_tab_text" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="realtime_issue_item">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--
    라운드 다이얼로그
    https://gist.github.com/ArthurNagy/1c4a64e6c8a7ddfca58638a9453e4aed

    Theme_Design_Light_BottomSheetDialog
    -->
    <style name="round_background_bottom_sheet_modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_realtime_issue_background</item>
    </style>

    <style name="round_bottom_sheet_dialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/round_background_bottom_sheet_modal</item>
    </style>

    <!--
     navigation
    -->

    <style name="navi_icon">
        <item name="android:textAppearance">@style/solid</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">?selectableItemBackgroundBorderless</item>-->
    </style>

    <style name="navi_bottom_button">
        <!--<item name="android:gravity">center|center_vertical</item>-->
        <!--<item name="android:orientation">horizontal</item>-->
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <!-- dumy view -->

    <style name="dumyView">
        <item name="android:background">#efefef</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <!-- 1dp line -->

    <style name="line1dp">
        <item name="android:background">#efefef</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>
