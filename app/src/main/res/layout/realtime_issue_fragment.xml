<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="model"
                type="com.example.clone_daum.ui.main.realtimeissue.RealtimeIssueViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/realtime_issue_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <View
                android:id="@+id/realtime_issue_dimming_background"
                android:layout_width="match_parent" android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#8F000000"
                app:bindAlpha="@{model.dimmingBgAlpha}"
                android:onClick="@{() -> model.command(model.CMD_ANIM_FINISH)}"
                android:alpha="0"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/realtime_issue_extend_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/realtime_issue_search"
                app:layout_constraintEnd_toEndOf="parent"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/realtime_issue_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            >
                <!--android:paddingStart="13dp"-->
                <!--android:paddingTop="13dp"-->
                <!--android:paddingEnd="13dp"-->
                <!--android:paddingBottom="23dp"-->
                <!--app:bindTranslateY="@{model.overshootTransY}"-->
                <!--android:translationY="-400dp"-->

                <com.google.android.material.tabs.TabLayout
                        android:id="@+id/realtime_issue_tab"
                        style="@style/realtime_issue_tab_layout"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/main_tab_height"
                        app:tabMode="scrollable"
                        app:tabPaddingStart="10dp"
                        app:tabPaddingEnd="10dp"
                        app:tabGravity="fill"
                        app:tabMinWidth="0dp"
                        app:bindSetupWithViewPager="@{model.viewpager}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/realtime_issue_tab_menu"
                        app:layout_constraintTop_toTopOf="parent"
                        android:requiresFadingEdge="horizontal"
                        android:layout_marginStart="20dp"
                />

                <ImageView
                        android:id="@+id/realtime_issue_tab_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/realtime_issue_tab"
                        android:paddingEnd="14dp"
                        android:paddingStart="10dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:onClick="@{() -> model.command(model.CMD_ANIM_FINISH)}"
                        app:bindRotation="@{model.tabMenuRotation}"
                />

                <com.example.clone_daum.common.widget.BkViewPager
                        android:id="@+id/realtime_issue_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/realtime_issue_tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:bindPagerAdapter="@{model.tabAdapter}"
                        app:bindTranslateY="@{model.containerTransY}"
                        android:translationY="-500dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingBottom="10dp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 스크롤시 화면에 가려져야하는 영역 -->

        <View
                android:id="@+id/realtime_issue_background"
                android:layout_width="match_parent" android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue_search"
        />

        <TextView
                android:id="@+id/realtime_issue_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_search_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/main_search_mgn_s"
                android:layout_marginTop="@dimen/main_search_mgn_t"
                android:layout_marginEnd="@dimen/main_search_mgn_e"
                android:focusable="false"
                android:background="@drawable/shape_search_background"
        />

        <!-- ICONS FROM SEARCH BAR -->

        <ImageView
                android:id="@+id/realtime_issue_search_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_android_black_14dp"
                app:layout_constraintStart_toStartOf="@+id/realtime_issue_search"
                app:layout_constraintTop_toTopOf="@+id/realtime_issue_search"
                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue_search"
                android:layout_marginStart="@dimen/main_search_logo_pad_se"
        />

        <ImageView
                android:id="@+id/realtime_issue_search_extend_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_view_comfy_black_24dp"
                app:layout_constraintTop_toTopOf="@+id/realtime_issue_search"
                app:layout_constraintEnd_toEndOf="@+id/realtime_issue_search"
                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue_search"
                android:padding="@dimen/main_search_extend_pad"
                android:onClick="@{() -> model.command(model.CMD_ANIM_FINISH)}"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
