<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model"
                  type="com.example.clone_daum.ui.main.realtimeissue.RealtimeIssueViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/realtime_issue_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
    >

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/realtime_issue_tab"
                style="@style/realtime_issue_tab_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/main_tab_height"
                app:tabMode="scrollable"
                app:tabPaddingStart="10dp"
                app:tabPaddingEnd="10dp"
                app:tabGravity="fill"
                app:tabMinWidth="0dp"
                app:bindSetupWithViewPager="@{model.viewpager}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/realtime_issue_tab_menu"
                app:layout_constraintTop_toTopOf="parent"
                android:requiresFadingEdge="horizontal"
        />

        <ImageView
                android:id="@+id/realtime_issue_tab_menu"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/ic_clear_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue_tab"
                android:paddingEnd="@dimen/main_tab_menu_pad"
                android:paddingStart="@dimen/main_tab_menu_pad"
                android:background="@drawable/selector_button_bgcolor"
                android:onClick="@{() -> model.eventFinish()}"
        />

        <com.example.clone_daum.common.widget.BkViewPager
                android:id="@+id/realtime_issue_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/realtime_issue_tab"
                app:layout_constraintEnd_toEndOf="parent"
                app:bindPagerAdapter="@{model.tabAdapter}"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
