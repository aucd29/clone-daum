<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!--<variable name="model" type="com.example.clone_daum.ui.main.MainViewModel"/>-->
        <variable name="model" type="com.example.clone_daum.ui.main.MainWebViewViewModel" />
    </data>

    <com.example.clone_daum.common.widget.VerticalSwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <!-- 제대로 동작하지 않아 수정 -->
        <!--app:bindSwipeRefreshListener="@{model.swipeRefreshListener}"-->
        <!--app:bindSwipeRefreshingFalse="@{model.swipeRefreshingFalse}"-->
        <!--app:bindSwipeIsRefreshing="@{model.swipeIsRefreshing}"-->

        <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bindWebViewEvent="@{model.webviewEvent}"
            />

        </androidx.core.widget.NestedScrollView>
    </com.example.clone_daum.common.widget.VerticalSwipeRefreshLayout>

</layout>
