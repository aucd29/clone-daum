<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.lang.String" />
        <variable name="model" type="com.example.clone_daum.ui.main.realtimeissue.RealtimeIssueViewModel"/>
        <variable name="item" type="com.example.clone_daum.model.remote.RealtimeIssue"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/realtime_issue_child_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:onClick="@{() -> model.commandEvent(model.CMD_BRS_OPEN, item.url)}"
    >

        <TextView
                android:id="@+id/num"
                style="@style/realtime_issue_item"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/issue"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{String.valueOf(item.index)}"
                android:layout_marginEnd="10dp"
        />

        <TextView
                android:id="@+id/issue"
                style="@style/realtime_issue_item"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="250dp"
                android:text="@{item.text}"
        />

        <!-- 그냥 하드코딩 -->
        <TextView
                android:id="@+id/rank"
                style="@style/realtime_issue_item"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="000"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
