<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item" type="com.example.clone_daum.model.local.PopularKeyword" />
        <variable name="model" type="com.example.clone_daum.ui.search.PopularViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chip_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/chip_text"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="@{() -> model.event(item.keyword)}"
                android:background="@drawable/shape_chip_background"
                tools:text="HELLO WORLD"
                android:padding="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:text="@{item.keyword}"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
