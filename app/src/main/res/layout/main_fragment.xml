<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.example.clone_daum.ui.main.MainViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/search_bar"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/search_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                    <EditText
                            android:id="@+id/search"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:focusable="false"
                            android:background="@drawable/shape_search_background"
                            android:text="@={model.searchKeyword}"
                    />

                    <ImageView
                            android:id="@+id/search_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_android_black_14dp"
                            app:layout_constraintStart_toStartOf="@+id/search"
                            app:layout_constraintTop_toTopOf="@+id/search"
                            app:layout_constraintBottom_toBottomOf="@+id/search"
                            android:layout_marginStart="20dp"
                    />

                    <ImageView
                            android:id="@+id/search_extend_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_android_black_14dp"
                            app:layout_constraintTop_toTopOf="@+id/search"
                            app:layout_constraintEnd_toEndOf="@+id/search"
                            app:layout_constraintBottom_toBottomOf="@+id/search"
                            android:layout_marginEnd="20dp"
                            android:onClick="@{() -> model.searchExtendMenu()}"
                    />

                    <!-- rank -->

                    <TextView
                            android:id="@+id/search_rank"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@+id/search_logo"
                            app:layout_constraintTop_toBottomOf="@+id/search"
                            tools:text="4 내용"
                            android:text="4 내용"
                            android:layout_marginTop="10dp"
                    />

                    <ImageView
                            android:id="@+id/search_extend_rank"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            app:layout_constraintTop_toTopOf="@+id/search_rank"
                            app:layout_constraintEnd_toStartOf="@+id/search_vertical_bar"
                            android:layout_marginEnd="10dp"
                            android:onClick="@{() -> model.searchExtendRank()}"
                    />

                    <TextView
                            android:id="@+id/search_vertical_bar"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            tools:text="|"
                            android:textColor="#dedede"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/search_rank"
                            app:layout_constraintEnd_toEndOf="parent"
                    />

                    <!-- weather -->

                    <!-- gps -->

                    <View
                            style="@style/dumyView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/search_rank"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <!-- TAB -->

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_anchor="@+id/toolbar_layout">

                <com.google.android.material.tabs.TabLayout
                        style="@style/MyCustomTabLayout"
                        android:id="@+id/tab"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:tabMode="scrollable"
                        app:tabIndicatorColor="@android:color/black"
                        app:bindSetupWithViewPager="@{model.viewpager}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tab_menu"
                        app:layout_constraintBottom_toBottomOf="parent"
                />

                <ImageView
                        android:id="@+id/tab_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_black_24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:onClick="@{() -> model.tabMenu()}"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:bindPagerAdapter="@{model.tabAdapter}"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
