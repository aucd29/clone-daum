<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="com.example.clone_daum.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bindPagerAdapter="@{model.tabAdapter}"
                    app:bindOffscreenPageLimit="@{model.viewpagerPageLimit}"
            />

            <!--
            app:layout_behavior="com.example.clone_daum.ui.main.MainScrollingViewBehavior"
            app:bindViewPagerLoaded="@{model.viewpagerLoadedEvent}"
            -->

            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/search_bar"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bindOffsetChangedListener="@{model.appbarOffsetChangedEvent}">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/search_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:clickable="true"
                    >

                        <!-- SEARCH TEXT -->

                        <TextView
                                android:id="@+id/search"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/main_search_height"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginStart="@dimen/main_search_mgn_s"
                                android:layout_marginTop="@dimen/main_search_mgn_t"
                                android:layout_marginEnd="@dimen/main_search_mgn_e"
                                android:focusable="false"
                                android:background="@drawable/shape_search_background"
                                android:onClick="@{() -> model.commandEvent(model.CMD_SEARCH_FRAMGNET, ``)}"
                        />

                        <!-- ICONS FROM SEARCH BAR -->

                        <ImageView
                                android:id="@+id/search_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_android_black_14dp"
                                app:layout_constraintStart_toStartOf="@+id/search"
                                app:layout_constraintTop_toTopOf="@+id/search"
                                app:layout_constraintBottom_toBottomOf="@+id/search"
                                android:layout_marginStart="@dimen/main_search_logo_mgn_s"
                                android:onClick="@{() -> model.gotoNews()}"
                        />

                        <ImageView
                                android:id="@+id/search_extend_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_view_comfy_black_24dp"
                                app:layout_constraintTop_toTopOf="@+id/search"
                                app:layout_constraintEnd_toEndOf="@+id/search"
                                app:layout_constraintBottom_toBottomOf="@+id/search"
                                android:layout_marginEnd="@dimen/main_search_extend_mgn_e"
                                android:onClick="@{() -> model.searchExtendMenu()}"
                        />

                        <!-- REALTIME ISSUE -->

                        <TextView
                                android:id="@+id/realtime_issue"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@+id/search_logo"
                                app:layout_constraintTop_toBottomOf="@+id/search"
                                tools:text="4 내용"
                                android:layout_marginTop="@dimen/main_search_rank_mgn_t"
                                android:background="@drawable/selector_button_bgcolor"
                                android:paddingTop="4dp"
                                android:paddingEnd="10dp"
                                android:text="@{model.realtimeIssueText}"
                                android:maxLines="1"
                                android:maxWidth="120dp"
                                android:ellipsize="end"
                                android:onClick="@{() -> model.realtimeIssueOpenEvent(model.realtimeIssueText)}"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"
                        />

                        <ImageView
                                android:id="@+id/realtime_issue_extend"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                                app:layout_constraintTop_toTopOf="@+id/realtime_issue"
                                app:layout_constraintEnd_toStartOf="@+id/search_vertical_bar"
                                android:layout_marginEnd="@dimen/main_search_extend_rank_mgn_e"
                                android:background="?selectableItemBackgroundBorderless"
                                android:paddingTop="4dp"
                                android:onClick="@{() -> model.commandEvent(model.CMD_REALTIME_ISSUE_FRAGMENT, ``)}"
                        />

                        <!-- VERTICAL BAR -->

                        <TextView
                                android:id="@+id/search_vertical_bar"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                tools:text="|"
                                android:textColor="#dedede"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/realtime_issue"
                                app:layout_constraintEnd_toEndOf="parent"
                        />

                        <!-- WEATHER -->

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/weather_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@+id/search_vertical_bar"
                                app:layout_constraintTop_toBottomOf="@+id/search"
                                app:layout_constraintBottom_toTopOf="@+id/search_underline"
                                android:onClick="@{() -> model.weatherDetail()}">

                            <TextView
                                    android:id="@+id/search_weather_text"
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:text="서울"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                            />

                            <ImageView
                                    android:id="@+id/search_weather_icon"
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:src="@drawable/ic_brightness_low_black_24dp"
                                    app:layout_constraintStart_toEndOf="@+id/search_weather_text"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginStart="@dimen/main_weather_mgn_s"
                            />

                            <TextView
                                    android:id="@+id/search_weather_temperature"
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    app:layout_constraintStart_toEndOf="@+id/search_weather_icon"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:text="7도"
                                    android:layout_marginStart="@dimen/main_temperature_mgn_s"
                            />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- GPS -->

                        <ImageView
                                android:id="@+id/search_gps_icon"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:src="@drawable/ic_gps_not_fixed_black_24dp"
                                app:layout_constraintTop_toBottomOf="@+id/search"
                                app:layout_constraintEnd_toEndOf="@+id/search"
                                app:layout_constraintBottom_toTopOf="@+id/search_underline"
                                android:padding="@dimen/main_gps_pad"
                                android:onClick="@{() -> model.confirmGps()}"
                        />

                        <View
                                android:id="@+id/search_underline"
                                style="@style/dumyView"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/realtime_issue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                        />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <!-- TAB -->

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_anchor="@+id/toolbar_layout">

                    <!--android:selectedItemPosition="@={model.gotoNewsEvent}"-->
                    <!--
                    fade edge :
                    https://stackoverflow.com/questions/11538873/making-the-edge-of-the-scrollview-fade-when-scrolling-in-android/16726054
                    -->
                    <com.google.android.material.tabs.TabLayout
                            style="@style/MyCustomTabLayout"
                            android:id="@+id/tab"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/main_tab_height"
                            android:layout_gravity="bottom"
                            app:tabMode="scrollable"
                            app:tabPaddingStart="5dp"
                            app:tabPaddingEnd="5dp"
                            app:tabGravity="fill"
                            app:tabMinWidth="0dp"
                            app:bindTabSelect="@{model.gotoNewsEvent}"
                            app:bindSetupWithViewPager="@{model.viewpager}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tab_menu"
                            app:layout_constraintBottom_toTopOf="@+id/tab_underline"
                            android:requiresFadingEdge="horizontal"
                            android:fadingEdgeLength="50dp"
                    />

                    <View
                            android:id="@+id/tab_underline"
                            style="@style/line1dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tab"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />

                    <ImageView
                            android:id="@+id/tab_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_menu_black_24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/tab_underline"
                            android:paddingEnd="@dimen/main_tab_menu_pad"
                            android:paddingStart="@dimen/main_tab_menu_pad"
                            android:background="@drawable/selector_button_bgcolor"
                            android:onClick="@{() -> model.commandEvent(model.CMD_NAVIGATION_FRAGMENT, ``)}"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.AppBarLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ImageView
                android:id="@+id/over_back"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_backspace_black_24dp"
                android:visibility="@{model.visibleBack}"
                android:padding="@dimen/main_over_back_pad"
                android:onClick="@{() -> model.webviewBack()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
