<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable name="model" type="com.example.clone_daum.ui.main.MainViewModel"/>
        <!--디자인 변경으로 인해 제거 -->
        <!--<variable name="weatherModel"-->
        <!--type="com.example.clone_daum.ui.main.weather.WeatherViewModel"/>-->
        <variable name="realtimeIssueModel"
                  type="com.example.clone_daum.ui.main.realtimeissue.RealtimeIssueViewModel"/>
    </data>

    <com.example.clone_daum.common.widget.BkConstraintLayout
            android:id="@+id/root_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bindPagerAdapter="@{model.tabAdapter}"
            />

            <!-- realtime issue 쪽 배경 용 -->
            <View
                    android:id="@+id/realtime_issue_background"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="#52000000"
                    android:alpha="0"
                    android:onClick="@{() -> model.commandEvent(model.CMD_REALTIME_ISSUE_FRAGMENT)}"
                    app:bindAlpha="@{realtimeIssueModel.tabAlpha}"
                    android:visibility="@{realtimeIssueModel.visibleDetail}"
            />

            <!--
            app:layout_behavior="com.example.clone_daum.ui.main.MainScrollingViewBehavior"
            https://stackoverflow.com/questions/31543309/remove-the-shadow-below-tablayout-on-android
            -->

            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/search_bar"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:elevation="0dp"
                    app:bindOffsetChangedListener="@{model.appbarOffsetChangedLive}">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/search_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:clickable="true"
                    >

                        <!-- SEARCH TEXT -->

                        <TextView
                                android:id="@+id/search"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/main_search_height"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginStart="@dimen/main_search_mgn_s"
                                android:layout_marginTop="@dimen/main_search_mgn_t"
                                android:layout_marginEnd="@dimen/main_search_mgn_e"
                                android:focusable="false"
                                android:background="@drawable/shape_search_background"
                                android:onClick="@{() -> model.commandEvent(model.CMD_SEARCH_FRAMGNET)}"
                        />

                        <ImageView
                                android:id="@+id/search_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_android_black_14dp"
                                app:layout_constraintStart_toStartOf="@+id/search"
                                app:layout_constraintTop_toTopOf="@+id/search"
                                app:layout_constraintBottom_toBottomOf="@+id/search"
                                android:paddingStart="@dimen/main_search_logo_pad_se"
                                android:paddingEnd="@dimen/main_search_logo_pad_se"
                                android:onClick="@{() -> model.eventGotoNews()}"
                        />

                        <!-- MEDIA SEARCH ICON -->
                        <ImageView
                                android:id="@+id/search_extend_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@{model.searchIconResId}"
                                app:layout_constraintTop_toTopOf="@+id/search"
                                app:layout_constraintEnd_toEndOf="@+id/search"
                                app:layout_constraintBottom_toBottomOf="@+id/search"
                                android:padding="@dimen/main_search_extend_pad"
                                android:onClick="@{() -> model.commandEvent(model.CMD_MEDIA_SEARCH_FRAGMENT)}"
                        />

                        <!-- REALTIME ISSUE -->
                        <!-- 디자인 변경 됨 ...  -->
                        <TextView
                                android:id="@+id/realtime_label"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/main_realtime"
                                app:layout_constraintStart_toStartOf="@+id/search_logo"
                                app:layout_constraintTop_toBottomOf="@+id/search"
                                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue_extend"
                                android:textColor="#B3B3B3"
                        />

                        <TextView
                                android:id="@+id/realtime_issue"
                                android:layout_width="0dp" android:layout_height="wrap_content"
                                tools:text="4 내용"
                                android:maxLines="1"
                                android:maxWidth="@dimen/main_realtime_issue_max_width"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/main_realtime_issue_text"
                                android:padding="@dimen/main_realtime_issue_text_pad"
                                android:text="@{realtimeIssueModel.titleConvert(realtimeIssueModel.currentIssue)}"
                                android:layout_marginStart="15dp"
                                android:onClick="@{() -> model.commandEvent(model.CMD_BRS_OPEN, realtimeIssueModel.currentIssue.url)}"
                                app:layout_constraintStart_toEndOf="@+id/realtime_label"
                                app:layout_constraintTop_toBottomOf="@+id/search"
                                app:layout_constraintEnd_toStartOf="@+id/realtime_issue_extend"
                        />

                        <!--android:background="@drawable/selector_button_bgcolor"-->

                        <ProgressBar
                                android:id="@+id/realtime_issue_progress"
                                android:layout_width="@dimen/main_mini_progress"
                                android:layout_height="@dimen/main_mini_progress"
                                app:layout_constraintStart_toStartOf="@+id/realtime_issue"
                                app:layout_constraintTop_toTopOf="@+id/realtime_issue"
                                app:layout_constraintEnd_toStartOf="@+id/realtime_issue_extend"
                                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue"
                                android:visibility="@{realtimeIssueModel.visibleProgress}"
                        />

                        <TextView
                                android:id="@+id/realtime_rank"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/realtime_issue"
                                app:layout_constraintEnd_toStartOf="@+id/realtime_issue_extend"
                                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="@{realtimeIssueModel.typeConvert(realtimeIssueModel.currentIssue)}"
                                tools:text="791"
                        />

                        <ImageView
                                android:id="@+id/realtime_issue_extend"
                                android:layout_width="wrap_content" android:layout_height="0dp"
                                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                                app:layout_constraintTop_toTopOf="@+id/realtime_issue"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@+id/realtime_issue"
                                android:paddingStart="10dp"
                                android:paddingEnd="14dp"
                                app:bindRotation="@{realtimeIssueModel.tabMenuRotation}"
                                android:onClick="@{() -> model.commandEvent(model.CMD_REALTIME_ISSUE_FRAGMENT)}"
                        />

                        <!--android:background="?selectableItemBackgroundBorderless"-->

                        <View
                                android:id="@+id/search_underline"
                                style="@style/dumyView"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/realtime_issue_extend"
                                app:layout_constraintEnd_toEndOf="parent"
                        />

                        <!-- REALTIME ISSUE TAB LAYOUT -->
                        <!-- pivot 을 변경해야 함 -->

                        <com.google.android.material.tabs.TabLayout
                                android:id="@+id/realtime_issue_tab"
                                style="@style/realtime_issue_tab_layout"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/main_tab_height"
                                app:tabMode="scrollable"
                                app:tabGravity="fill"
                                app:tabMinWidth="0dp"
                                android:layout_marginStart="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/realtime_issue_extend"
                                app:layout_constraintEnd_toStartOf="@+id/realtime_issue_extend"
                                android:requiresFadingEdge="horizontal"
                                app:tabBackground="@android:color/white"
                                android:background="@android:color/white"
                                android:visibility="@{realtimeIssueModel.visibleDetail}"
                                app:bindSetupWithViewPager="@{realtimeIssueModel.viewpager}"
                                app:bindAlpha="@{realtimeIssueModel.tabAlpha}"
                                android:alpha="0"
                        />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <!-- TAB -->

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_anchor="@+id/toolbar_layout"
                >

                    <!--android:selectedItemPosition="@={model.gotoNewsEvent}"-->
                    <!--
                    fade edge :
                    https://stackoverflow.com/questions/11538873/making-the-edge-of-the-scrollview-fade-when-scrolling-in-android/16726054
                    -->
                    <com.google.android.material.tabs.TabLayout
                            style="@style/MyCustomTabLayout"
                            android:id="@+id/tab"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/main_tab_height"
                            android:layout_gravity="bottom"
                            app:tabMode="scrollable"
                            app:tabPaddingStart="5dp"
                            app:tabPaddingEnd="5dp"
                            app:tabGravity="fill"
                            app:tabMinWidth="0dp"
                            app:bindTabSelect="@{model.gotoNewsEvent}"
                            app:bindSetupWithViewPager="@{model.viewpager}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tab_menu"
                            android:requiresFadingEdge="horizontal"
                            android:fadingEdgeLength="50dp"
                    />

                    <View
                            android:id="@+id/tab_underline"
                            style="@style/line1dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tab"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />

                    <ImageView
                            android:id="@+id/tab_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/main_tab_height"
                            android:src="@drawable/ic_menu_black_24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/tab_underline"
                            android:paddingEnd="@dimen/main_tab_menu_pad"
                            android:paddingStart="@dimen/main_tab_menu_pad"
                            android:background="@drawable/selector_button_bgcolor"
                            android:onClick="@{() -> model.commandEvent(model.CMD_NAVIGATION_FRAGMENT)}"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.AppBarLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <!--
        appbar 내부에 있으면 layout 을 재 조정해야 하므로 첫 로딩 때
        버벅이는 문제로 그냥 top level 의 layout 에 view 를 넣는 형태로 변경
        -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/realtime_issue_area"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        >

            <com.example.clone_daum.common.widget.BkViewPager
                    android:id="@+id/realtime_issue_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:bindPagerAdapter="@{realtimeIssueModel.tabAdapter}"
                    app:bindViewPagerLoaded="@{realtimeIssueModel.viewPagerLoaded}"
                    app:bindTranslateY="@{realtimeIssueModel.containerTransY}"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
                android:id="@+id/over_back"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_backspace_black_24dp"
                android:visibility="@{model.visibleBack}"
                android:padding="@dimen/main_over_back_pad"
                android:onClick="@{() -> model.webviewBack()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </com.example.clone_daum.common.widget.BkConstraintLayout>
</layout>
